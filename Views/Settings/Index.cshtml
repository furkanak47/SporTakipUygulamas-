@model SporTakip.Models.ApplicationUser

<div class="container mt-4">
    
    <div class="row mb-4 g-3">
        <div class="col-md-4">
            @if(ViewBag.BMI != null)
            {
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Vücut Kitle Endeksi (BMI)</h6>
                        <h2 class="fw-bold">@ViewBag.BMI</h2>
                        <span class="badge bg-warning text-dark">@ViewBag.Durum</span>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Güncel Beslenme Hedeflerin</h6>
                    @if(ViewBag.HedefKalori != null)
                    {
                        <p class="mb-1"><strong>@ViewBag.HedefKalori</strong> kcal / gün</p>
                        <p class="small text-muted mb-2">
                            Tahmini makro dağılımı: 
                            <strong>@ViewBag.HedefProtein g</strong> protein, 
                            <strong>@ViewBag.HedefYag g</strong> yağ, 
                            <strong>@ViewBag.HedefKarb g</strong> karbonhidrat.
                        </p>
                        <p class="small text-muted mb-0">
                            Bu değerler yaş, boy, kilo, cinsiyet, hareket seviyesi ve amacına göre otomatik hesaplanır.
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Kalori hedeflerini görebilmek için aşağıdaki profil bilgilerini doldur.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4>⚙️ Profil ve Hedef Ayarları</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post">
                        
                        <h5 class="text-primary border-bottom pb-2">Kişisel Bilgiler</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label>Yaş</label>
                                <input asp-for="Age" class="form-control" type="number" required />
                            </div>
                            <div class="col-md-4">
                                <label>Boy (cm)</label>
                                <input asp-for="Height" class="form-control" type="number" required />
                            </div>
                            <div class="col-md-4">
                                <label>Güncel Kilo (kg)</label>
                                <input asp-for="Weight" class="form-control" type="number" step="0.1" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Cinsiyet</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                            </select>
                        </div>

                        <h5 class="text-primary border-bottom pb-2 mt-4">Hedeflerin</h5>
                        
                        <div class="mb-3">
                            <label class="fw-bold">Günlük Hareket Seviyen?</label>
                            <select asp-for="ActivityLevel" class="form-select">
                                <option value="Az">Az (Masa başı iş, az spor)</option>
                                <option value="Orta">Orta (Haftada 3-4 gün spor)</option>
                                <option value="Çok">Çok (İnşaat işçisi, ağır sporcu)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Amacın Ne?</label>
                            <select asp-for="GoalType" class="form-select">
                                <option value="Koru">Kilomu Korumak</option>
                                <option value="Ver">Kilo Vermek (Yağ Yakmak)</option>
                                <option value="Al">Kilo Almak (Kas Yapmak)</option>
                            </select>
                            <small class="text-muted">Seçimine göre günlük kalori ve makro hedeflerin otomatik güncellenir.</small>
                        </div>

                        <button type="submit" class="btn btn-success w-100 btn-lg mt-3">Bilgileri Güncelle ve Hesapla</button>
                    </form>

                    <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">

                    <h5 class="text-primary border-bottom pb-2">Güvenlik</h5>
                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-warning w-100">
                        <i class="bi bi-shield-lock"></i> Şifre Değiştir
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>