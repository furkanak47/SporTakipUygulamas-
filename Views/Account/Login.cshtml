@model SporTakip.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #1e1e1e, #252525);">
                <div class="card-header border-0 bg-transparent text-center py-4">
                    <h2 class="text-white mb-0"><i class="bi bi-box-arrow-in-right text-primary"></i> Giriş Yap</h2>
                    <p class="text-muted small mt-2 mb-0">Hesabına giriş yap ve hedeflerine ulaş</p>
                </div>
                <div class="card-body px-4 pb-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-white">
                                <i class="bi bi-envelope"></i> Email Adresi
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-white">
                                <i class="bi bi-lock"></i> Şifre
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label class="form-check-label text-muted">Beni Hatırla</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">

                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            Hesabın yok mu? 
                            <a asp-action="Register" class="text-primary text-decoration-none fw-bold">Kayıt Ol</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
