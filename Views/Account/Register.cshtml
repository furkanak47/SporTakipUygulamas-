@model SporTakip.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #1e1e1e, #252525);">
                <div class="card-header border-0 bg-transparent text-center py-4">
                    <h2 class="text-white mb-0"><i class="bi bi-person-plus text-success"></i> Kayıt Ol</h2>
                    <p class="text-muted small mt-2 mb-0">Yeni hesap oluştur ve yolculuğuna başla</p>
                </div>
                <div class="card-body px-4 pb-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-white">
                                <i class="bi bi-envelope"></i> Email Adresi
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-white">
                                <i class="bi bi-lock"></i> Şifre
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <small class="text-muted">En az 3 karakter</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label text-white">
                                <i class="bi bi-lock-fill"></i> Şifre Tekrar
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill">
                                <i class="bi bi-person-plus"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">

                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            Zaten hesabın var mı? 
                            <a asp-action="Login" class="text-primary text-decoration-none fw-bold">Giriş Yap</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
                </div>
                <div class="card-footer text-center">
                    <p>Zaten hesabın var mı? <a asp-action="Login">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>