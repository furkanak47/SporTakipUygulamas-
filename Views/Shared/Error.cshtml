@model SporTakip.Models.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 5rem; color: #ff1744;"></i>
    </div>
    <h1 class="display-4 fw-bold text-danger mb-3">Bir Hata Oluştu</h1>
    <p class="lead text-muted mb-4">
        Üzgünüz, isteğiniz işlenirken bir sorun yaşandı.
    </p>
    
    @if (Model.ShowRequestId)
    {
        <div class="alert alert-secondary d-inline-block">
            <strong>İstek ID:</strong> <code>@Model.RequestId</code>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5">
            <i class="bi bi-house-door"></i> Ana Sayfaya Dön
        </a>
    </div>
</div>
